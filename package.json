{
  "name": "lbh3",
  "version": "0.0.1",
  "description": "LBH3 website",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LBH3/lbh3.org.git"
  },
  "bugs": {
    "url": "https://github.com/LBH3/lbh3.org/issues"
  },
  "homepage": "https://github.com/LBH3/lbh3.org#readme",
  "private": true,
  "main": "src",
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "scripts": {
    "build": "cd public && npm run build:production && cd ..",
    "build:tests": "cd public && npm run build:tests:production && cd ..",
    "build:watch": "cd public && npm run build:watch && cd ..",
    "bundlesize": "node ./node_modules/.bin/bundlesize --config config/bundlesize.json",
    "ci": "node install-ci",
    "eslint": "eslint src/. test/. --config .eslintrc.json --fix",
    "heroku-postbuild": "npm run build",
    "install": "node install",
    "mocha": "mocha test/ --recursive --exit",
    "mocha:debug": "mocha test/ --recursive --inspect-brk --exit",
    "sequelize:migrate": "npx sequelize-cli db:migrate",
    "sequelize:migrate:rerun": "npm run sequelize:migrate:undo && npm run sequelize:migrate",
    "sequelize:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "start": "node --optimize_for_size --max_old_space_size=460 src/",
    "start:debug": "node --inspect src/ & sleep 1 && npm run build:watch",
    "start:inspect": "node --inspect-brk src/",
    "start:production": "npm run build && NODE_ENV=production PORT=8080 npm start",
    "test": "npm run test:common && npm run testee",
    "test:common": "npm run eslint && npm run build && npm run bundlesize && npm run test:db && npm run mocha && npm run build:tests",
    "test:db": "npm run test:db:create && npm run sequelize:migrate",
    "test:db:create": "psql -c 'drop database if exists lbh3_test;' -h localhost -U postgres && psql -c 'create database lbh3_test;' -h localhost -U postgres && psql lbh3_test < ./test/lbh3_test.dump -h localhost -U postgres -v ON_ERROR_STOP=1",
    "test:production": "npm run test:common && npm run testee:production",
    "testee": "./public/node_modules/.bin/testee public/test.html --browsers firefox --reporter Spec",
    "testee:production": "./public/node_modules/.bin/testee public/test.production.html --browsers firefox --reporter Spec"
  },
  "dependencies": {
    "@feathersjs/authentication": "^2.1.6",
    "@feathersjs/authentication-jwt": "^2.0.1",
    "@feathersjs/authentication-oauth2": "^1.0.3",
    "@feathersjs/configuration": "^1.0.2",
    "@feathersjs/errors": "^3.3.0",
    "@feathersjs/feathers": "^3.1.5",
    "@feathersjs/socketio": "^3.2.1",
    "aws-sdk": "^2.99.0",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "feathers-authentication-hooks": "^0.1.4",
    "feathers-hooks-common": "^3.7.1",
    "feathers-sequelize": "^6.3.4",
    "googleapis": "^52.1.0",
    "helmet": "^3.8.1",
    "honeybadger": "^1.3.0",
    "html-entities": "^1.2.1",
    "json2csv": "^5.0.0",
    "marked": "^1.1.0",
    "node-fetch": "^2.6.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth20": "^1.0.0",
    "pg": "^8.0.0",
    "sequelize": "^6.1.0",
    "sequelize-cli": "^5.5.0",
    "serve-favicon": "^2.4.3",
    "sharp": "^0.25.2",
    "striptags": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "bundlesize": "^0.18.0",
    "eslint": "^6.5.1",
    "http-server": "^0.12.0",
    "mocha": "^6.2.2",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "through": "^2.3.8",
    "xml-stream": "^0.4.5"
  }
}
