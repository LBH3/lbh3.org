Redirect 301 /pastruns/runs/lbh3_([0-9]+)_(\d{4})(\d{2})(\d{2}).php /events/$2/$3/$4/trail-$1/
Redirect 301 /pics/ /events/
Redirect 301 /pics/index.html /events/
Redirect 301 /pics/archives/archives.php /events/
Redirect 301 /pics/archives/pics2014.php /events/2014/
Redirect 301 /pics/archives/pics2013.php /events/2013/
Redirect 301 /snooze/ /events/
