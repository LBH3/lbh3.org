RewriteEngine On

RewriteCond %{HTTP_HOST} ^[^.]+\.[^.]+$
RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteCond %{HTTP:X-Forwarded-Proto} !https
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

Redirect 301 /index.php /
Redirect 301 /about/aboutus.php /about/
Redirect 301 /mismanage/ /about/mismanagement/
Redirect 301 /mismanage/index.html /about/mismanagement/
Redirect 301 /mismanage/mismanage.php /about/mismanagement/
