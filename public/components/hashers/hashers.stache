<can-import from="can-stache-route-helpers" />
<can-import from="font-awesome/css/font-awesome.css" />

{{#if session.user.canViewHashersEmailList}}
  <div class="mb-2 row">
    <div class="col"></div>
    <div class="col">
      <h2>Hashers</h2>
    </div>
    <div class="col text-right">
      <a class="d-inline-block d-print-none p-2 p-md-1 pt-md-2" href="{{routeUrl page='hashers' secondaryPage='early-warning'}}" title="Go to the early warning page">
        <span class="fa fa-bell fa-lg"></span>
      </a>
      <a class="d-inline-block d-print-none p-2 p-md-1 pt-md-2" href="{{routeUrl page='hashers' secondaryPage='email'}}" title="Go to the email list">
        <span class="fa fa-envelope fa-lg"></span>
      </a>
    </div>
  </div>
{{else}}
  <h2>
    Hashers
  </h2>
{{/if}}

{{#if session.user.canViewDirectoryInfo}}

  <form class="mb-2">
    <div class="form-inline">
      <label class="sr-only" for="searchText">Name or email</label>
      <input autocomplete="off" autofocus class="form-control" id="searchText" placeholder="Name or email" type="text" value:bind="searchText">

      <div class="form-check ml-2">
        <input class="form-check-input" id="noHeadshot" type="checkbox" checked:bind="searchNoHeadshot">
        <label class="form-check-label" for="noHeadshot">
          No headshot
        </label>
      </div>

      <button class="btn btn-primary ml-2" type="submit">
        Search
      </button>

      {{#if session.user.canAddHashers}}
        <div class="d-print-none ml-auto">
          <a class="btn btn-primary" href="{{routeUrl page='hashers' secondaryPage='add'}}">
            Add hasher
          </a>
        </div>
      {{/if}}
    </div>
  </form>

  {{#if hashersPromise.isPending}}
    <div class="alert alert-info" role="alert">
      <strong>Fetching hashers…</strong>
    </div>
  {{/if}}

  {{#if hashersPromise.isRejected}}
    <div class="alert alert-danger" role="alert">
      <strong>Fuck!</strong> The hashers couldn’t be retrieved. {{hashersPromise.reason.message}}
    </div>
  {{/if}}

  {{#if hashersPromise.isResolved}}
    {{#if hashers.length}}
      <table class="table table-bordered table-responsive-sm table-sm">
        <thead>
          <tr>
            <th scope="col">Hash Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each hashers hasher=value}}
            <tr>
              {{#if hasher.hasName}}
                <td>
                  <a href="{{scope.root.routeForHasher(hasher)}}">
                    {{hasher.hashName}}
                  </a>
                </td>
                <td>
                  <a href="{{scope.root.routeForHasher(hasher)}}">
                    {{#if hasher.familyName}}
                      {{hasher.familyName}}
                    {{else}}
                      {{hasher.familyNamePrivate}}
                    {{/if}}
                  </a>
                </td>
                <td>
                  <a href="{{scope.root.routeForHasher(hasher)}}">
                    {{#if hasher.givenName}}
                      {{hasher.givenName}}
                    {{else}}
                      {{hasher.givenNamePrivate}}
                    {{/if}}
                  </a>
                </td>
              {{else}}
                <td colspan="3">
                  <a href="{{scope.root.routeForHasher(hasher)}}">
                    #{{hasher.id}}
                  </a>
                </td>
              {{/if}}
            </tr>
          {{/each}}
        </tbody>
      </table>

      {{#if pages}}
        <nav class="nav nav-pills">
          {{#each pages page=value}}
            <a
              class="{{#is scope.root.currentPage page}}active{{/is}} nav-link text-sm-center"
              href="{{scope.root.routeForPage(page)}}"
            >
              {{page}}
            </a>
          {{/each}}
        </nav>
      {{/if}}

    {{else}}
      <div class="alert alert-info" role="alert">
        <strong>No hashers found.</strong>
      </div>
    {{/if}}
  {{/if}}

{{else}}
  <div class="alert alert-danger" role="alert">
    Sorry, you don’t have permission to see this page.
  </div>
{{/if}}
